<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VideoFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_112"
            app:layout_constraintTop_toTopOf="parent">


            <!-- 탭 영역 -->
            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_50"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tabVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Video"
                    android:paddingHorizontal="48dp"
                    android:textSize="@dimen/dimen_36"
                    android:clickable="true"
                    android:textColor="@color/c_555555"
                    android:paddingVertical="@dimen/dimen_30" />

                <TextView
                    android:id="@+id/tabTheater"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Theater"
                    android:paddingVertical="@dimen/dimen_30"
                    android:textSize="@dimen/dimen_36"
                    android:clickable="true"
                    android:paddingHorizontal="48dp"
                    android:textColor="@color/c_1D1D1D"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tabFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Favorite"
                    android:paddingVertical="@dimen/dimen_30"
                    android:textSize="@dimen/dimen_36"
                    android:clickable="true"
                    android:paddingHorizontal="48dp"
                    android:textColor="@color/c_555555" />

                <TextView
                    android:id="@+id/tabChangeGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Genre"
                    android:paddingVertical="@dimen/dimen_30"
                    android:textSize="@dimen/dimen_36"
                    android:clickable="true"
                    android:paddingHorizontal="48dp"
                    android:textColor="@color/c_555555" />

            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <FrameLayout
            android:id="@+id/mediaTabContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>