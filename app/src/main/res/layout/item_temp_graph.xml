<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="@dimen/dimen_88"
        android:layout_height="wrap_content"
        android:text="NOW"
        android:textSize="28sp"
        android:textColor="@color/gray_90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/graphArea"
        android:layout_width="wrap_content"
        android:layout_height="264dp"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/groupIconTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivWeather"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <!-- 온도 텍스트 -->
            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21°"
                android:textSize="34sp"
                android:textColor="@color/white_90" />
        </LinearLayout>

        <View
            android:id="@+id/viewBar"
            android:layout_width="42dp"
            android:layout_height="4dp"
            android:background="@color/gray_80"
            app:layout_constraintStart_toEndOf="@id/groupIconTemp"
            app:layout_constraintTop_toTopOf="@id/groupIconTemp"
            app:layout_constraintBottom_toBottomOf="@id/groupIconTemp"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginBottom="@dimen/dimen_36"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
