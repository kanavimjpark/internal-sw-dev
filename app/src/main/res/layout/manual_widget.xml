<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_614"
    android:layout_height="@dimen/dimen_216"
    android:id="@+id/manual_widget"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/widget_background">

<TextView
    android:id="@+id/tv_title"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/string_24sp"
    android:layout_marginTop="@dimen/dimen_16"
    android:layout_marginStart="@dimen/dimen_32"
    android:textColor="@color/c_555555"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="@string/Manual"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/string_30sp"
        android:layout_marginHorizontal="@dimen/dimen_32"
        android:layout_marginVertical="@dimen/dimen_32"
        android:textColor="@color/c_1D1D1D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/Manual_text"/>
    
    <ImageView
        android:layout_width="@dimen/dimen_250"
        android:layout_height="@dimen/dimen_216"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dimen_46"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/widget_img_menual_light"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>