<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_1653"
    android:layout_height="@dimen/dimen_112"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dimen_96">
    
    <TextView
        android:id="@+id/tv_list_num"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="match_parent"
        android:textColor="@color/c_555555"
        android:textSize="@dimen/string_30sp"
        android:text="1"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_song_image"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_marginStart="@dimen/dimen_16"
        app:layout_constraintLeft_toRightOf="@+id/tv_list_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/string_32sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_song_image"
        app:layout_constraintRight_toLeftOf="@id/tv_artist_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/c_1D1D1D"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/string_32sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_song_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/c_555555"
        app:layout_constraintRight_toLeftOf="@id/tv_album"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/string_32sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_artist_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/c_555555"
        app:layout_constraintRight_toLeftOf="@+id/tv_song_time"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_song_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/string_32sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_album"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/c_555555"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>